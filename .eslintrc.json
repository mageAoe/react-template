{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "root": true,
  /* 继承某些已有的规则 */
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "prettier",
    "plugin:prettier/recommended"
  ],
  /* 指定如何解析语法 */
  "parser": "@typescript-eslint/parser",
  /* 优先级低于 parse 的语法解析配置 */
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "prettier"
  ],
  "rules": {
    // eslint (http://eslint.cn/docs/rules)
    "indent": ["error", 2],
    // 禁止所有 tab https://eslint.org/docs/latest/rules/no-tabs#rule-details
    "no-tabs": "error",
    "no-undef": "error",
    // "react-refresh/only-export-components": "warn",
    "array-callback-return": "error", // 数组回调方法必要return forEach 除外
    "camelcase": ["error", { "ignoreImports": true }], // 使用驼峰
    "arrow-body-style": [
      "error",
      "as-needed",
      { "requireReturnForObjectLiteral": true }
    ], // 箭头函数体周围需要大括号
    "block-scoped-var": "error",
    "eqeqeq": ["error", "always"], // 需要使用===和!==
    "max-lines": ["error", { "max": 300, "skipBlankLines": true }], // 强制每个文件的最大行数
    "no-console": "error", // 禁止使用console
    "no-empty": "error", // 禁止空块作用域
    "no-empty-function": "error", // 禁止空函数
    "no-eval": "error",
    "no-redeclare": "error", // 禁止变量重新声明
    "no-var": "error", // 禁止var

    "react/react-in-jsx-scope": "off",
    // "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }] //should add ".ts" if typescript project

    "prettier/prettier": "error", // 对于不符合prettier报eslint错误
    // typeScript (https://typescript-eslint.io/rules)
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-non-null-assertion": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  }
}
